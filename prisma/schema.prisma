generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String   @id @default(uuid())
  username   String   @unique
  password   String
  email      String?
  first_name String?
  last_name  String?

  // Relation fields
  reviews    Review[]  // One-to-many relationship with Review
  comments   Comment[] // One-to-many relationship with Comment
}

model Item {
  id            String   @id @default(uuid())
  name          String
  description   String?
  averageRating Float?
  reviews       Review[]
}

model Review {
  id          String   @id @default(uuid())
  userId      String
  itemId      String
  textReview  String
  rating      Float
  user        user     @relation(fields: [userId], references: [id])  // Updated
  item        Item     @relation(fields: [itemId], references: [id])
  comments    Comment[]
  @@unique([userId, itemId]) // Ensures only one review per item per user
}

model Comment {
  id          String   @id @default(uuid())
  userId      String
  reviewId    String
  textComment String
  user        user     @relation(fields: [userId], references: [id])  // Updated
  review      Review   @relation(fields: [reviewId], references: [id])
}